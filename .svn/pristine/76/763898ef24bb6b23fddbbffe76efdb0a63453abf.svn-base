@baseWidth:1280px;

.container{
  background-color:transparent;
  position: relative;
  width:@baseWidth;
  margin:auto;
  padding:20px 0 50px 0;
} 
.divider{
  background-color:#f45337;
  width: 4px;
  height: 20px;
  margin-left:0;
  margin-right: 15px;
}

.top_content{
  padding: 20px 0;
  margin-top: 10px;
  color: #07111B;
  font-size: 17px;
}
.top_title{
  font-weight: bolder;
}
.top_list{
  display: inline-block;
  // background-color: #999;
}
.list_center{
  overflow: hidden;
  white-space: nowrap;
}
.btn_center{
  // background-color: #f45337;
  cursor: pointer;
  margin: 0 5px;
  padding: 0 10px;
  font-size: 15px;
  color: #666;
}
.btn_center_selected,.btn_center:hover{
  .btn_center;
  color: #f45337;
}
.btn_left{
  font-size: 20px;
  cursor: pointer;
  padding: 5px 10px;
  color: #666;
}
.btn_left:hover,.btn_right:hover{
  color: #999;
}
.btn_right{
  .btn_left
}

.item_top{
  position: relative;
}
.lesson_item{
  border-radius: 5px;
  // border:1px solid #f5f5f5;
}
.img{
  border-radius: 10px;
  width:100%;
  height:162px;
  // border-bottom-left-radius: 0;
  // border-bottom-right-radius: 0;
  // border-bottom: 1px solid #f5f5f5;
}
.tag{
  padding:0 5px;
  background-color: #fff;
  position: absolute;
  bottom:10px;
  right:10px;
  border: 1px solid #eee;
  border-radius:3px;
  font-size:12px;
  color:#333;
  opacity:.8;
  user-select: none;
  cursor: pointer;
}
.item_center{
  display: flex;
  padding: 5px 15px 0 10px;
  line-height:22px;
  font-size:16px;
  color:#07111B;
  // height:50px;
  // font-weight: bold;
  // align-items: center;
}

.item_bottom{
  padding:5px 15px 10px 10px;
  font-size:15px;
}

.price{
  color:#f45337;
}
