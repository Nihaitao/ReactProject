@bannerHeight:460px;
@bannerMenuHeight:40px;
@baseWidth:1280px;
//首页 banner + 菜单 + 右边login
.container{
  position: relative;
  background-color:#fff;
  height:@bannerHeight+@bannerMenuHeight;
}

.banner_body_container{
  background:rgb(239, 61, 61);
  width: 100%;
  height:@bannerHeight;
}
.banner_content{
  width:@baseWidth;
  margin:auto;
}
.banner_center{
  background:#cbcbff;
}
.banner_img{
  width:100%;
  height:@bannerHeight;
}

.banner_right{
  display: flex;
  align-items: center;
  height:@bannerHeight;
}

.login_container{
  width:214px;
  height:340px;
  background-color:#fff;
  border-radius: 5px;
  display:flex;
  flex-direction: column;
  align-items: center;
  padding:0 18px;
  color: #666;
}
.login_container :global(.ant-list){
  color: #666;
}
.login_top{
  flex:3;
  display: flex;
  justify-content:  center;
  align-items: center;
  flex-direction: column;
  padding-top: 15px;
  .login_img{
    margin-bottom: 10px;
    width:80px;
    height:80px;
    border-radius: 40px;
  }
}
.logined_center{
  flex:1;
  display: flex;
  width: 100%;
  flex-direction: column;
  font-size: 14px;
  line-height: 20px;
  color: #f45337;
  .record{
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 13px;
    line-height: 20px;
    color: #666;
  }
}
.login_center{
  flex:1;
  display: flex;
  width: 100%;
  justify-content:  space-between;
  .login_btn{
    padding:0 22px;
    font-size: 14px;
  }
}

.login_bottom{
  flex:3;
  color: #333;
}


//首页 顶部logo+搜索
.top_search_container{
  padding:30px 0;
  position: relative;
  width:@baseWidth;
  margin:auto;
  background-color:#fff;
} 
.placeholder{
  color: red;
}
.search{
  width:600px;
  input{
    font-size: 15px;
  }
  button{
    font-size: 14px;
  }
